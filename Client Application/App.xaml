             StartupUri="MainWindow.xaml" >
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <!-- default localization -->
                <ResourceDictionary Source="/Client Application;component/Resources/Localizations/Localization.xaml" />

                <!-- default resources -->
